FROM node:8.9
RUN cd /tmp \
    && mkdir -p /frontend \    
    && curl -L http://releases.cloud-inquisitor.io/cinq-frontend-latest.tar.gz > frontend.tar.gz \
    && tar -xvf frontend.tar.gz -C /frontend \
    && cd /frontend \ 
    && npm install serve
CMD cd /frontend && ./node_modules/serve/bin/serve.js -p 3000 -s /frontend

